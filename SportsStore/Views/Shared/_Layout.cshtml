<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sports Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <style>

        /* Enhanced dark purple gradient navbar theme */
        .custom-navbar {
            background: linear-gradient(90deg, #1a043a, #4a0c84);
            color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

            /* Navbar links styling */
            .custom-navbar a {
                color: #ffffff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .custom-navbar a:hover {
                    color: #facc15; /* Vibrant yellow */
                    text-decoration: underline;
                }

        /* Body background and text enhancements */
        body {
            background-color: #1e1b2e; /* Deep dark background */
            color: #e0e0e0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Heading style */
        h4 {
            font-weight: bold;
            color: #f8fafc;
        }


    </style>
</head>
<body>
    <div class="custom-navbar text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8">
                    <h4 class="m-2">SPORTS STORE</h4>
                </div>
                <div class="col-4 text-end">
                    @await Component.InvokeAsync("CartSummary")
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/obs-xf.js" asp-append-version="true"></script>
</body>
</html>
